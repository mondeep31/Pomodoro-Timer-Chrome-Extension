{
    "manifest_version" : 3,
    "name" : "Pomodoro Timer",
    "description" : "Boost your productivity",
    "version" : "1.0.0",
    "icons" : {
        "16" : "icons/icons16.png",
        "32" : "icons/icons32.png",
        "48" : "icons/icons48.png",
        "128" : "icons/icons128.png"
    },
    "action" : {
        "default_icon": {
            "16" : "icons/icons16.png",
            "32" : "icons/icons32.png",
            "48" : "icons/icons48.png",
            "128" : "icons/icons128.png"
        }
    },
    "permissions" : ["contextMenus","alarms","notifications"],
    "background" : {
        "service_worker" : "service_worker.js"
    }
        

}